<body>
	<div id="container">

 	  <div id="right_side_company">
	<div id="formDiv">
	<h2>Creating new Question</h2>
	<form id="addingForm" name="question_adding_form">
      <!--  metaCategory of question (getting from DB) -->
         <div class="longdiv1">
                    <label>Type of question</label>

                    <select class="selectLine" id="mCatSel" name="metaCategory" required="required">
                        <option disabled selected="selected">Choose the type</option>
                        <option value="American Test">American Test</option>
                        <option value="Open Question">Open Question</option>
                        <%-- <%= Maintenance.AutoGeneratedInformationTextHTML()%> --%>
                    </select>
                    &nbsp;                    
                </div>
        
        <div id="aboutCategoryChosen"><p>Please, choose the type of the question. <br>
                    "American Test" has 2-4 options of answers, so the applicant should choose one of them. His answer will be checked automatically.<br>
                    "Open Question" doesn't have any options. The applicant should write his answer into a text field</div>
                    
        <!-- Category of question (getting from DB) -->
        
        <div id="questionCategory1" class="longdiv1" >
            <label>Question Category</label>
            <select class="selectLine" id="catSel" name="category1">
            <option value="none">Select Question Category</option>	
            <option value="Create company category">Create new category</option>   
            <%= AbstractAdminActions.AutoGeneratedInformationTextHTML()%>
            </select> &nbsp;
            <input id="inputCategoryField" type="text" name="category" hidden="hidden" placeholder="Java,HTML,...">
 		</div>
        <div id="compcategory">
	        <label>Company category </label>
	        <input type="text" name="compcategory" id="compcategorytosend" />
       
		</div>
        <!-- Question level Of Difficulty () --> 
        
       <div id="levelOfDifficultyForm">
                    <label>Level of difficulty</label>
                    <input type="radio" name="levelOfDifficulty" value="1">1
                    <input type="radio" name="levelOfDifficulty" value="2">2
                    <input type="radio" name="levelOfDifficulty" value="3" checked>3
                    <input type="radio" name="levelOfDifficulty" value="4">4
                    <input type="radio" name="levelOfDifficulty" value="5">5
        </div>
 		
        <!-- code in text for testing () --> 
        <div id = "questionDescription">
            <label>Question description <br />
            
            </label> 
            <textarea id="descriptionText" name="descriptionText" rows="14" cols="23"></textarea>
             <br />
            
 		</div>
         
        <div id = "codepattern">
            <label>Input Code by pattern <br />
             <p class="preTextPatternCode">
                Write the implementation!!!
                Your interface,
                or your method.
			</p>
            
            </label> 
            <textarea id="codeText" name="codeText" rows="14" cols="23"></textarea>
             <br />
       </div>
       
       <div id = "imageupload">
            <label>Upload Image</label>
            
           <input id ="takeFile" type="file"/>
            
 		</div>
       
      <div id = "americanquestion">

                    <br>
                    <div><h4>Options of answer</h4></div>
                    <br>
                    <!-- Button test code (AJAX) -->

                    <div>
                        <label>Option A</label>
                        <textarea id="at1" name="at1"></textarea>
                        <div class="correctAnswer">
                            <label>&nbsp;</label>
                            <input type="radio" name="correctAnswer" value="A">Correct answer</div>
                    </div>
                    <div>
                        <label>Option B</label>
                        <textarea id="at2" name="at2"></textarea>
                        <div class="correctAnswer">
                            <label>&nbsp;</label><input type="radio" name="correctAnswer" value="B">Correct answer</div>
                    </div>

                    <div>
                        <label>Option C</label>
                        <textarea id="at3" name="at3"></textarea>
                        <div class="correctAnswer">
                            <label>&nbsp;</label><input type="radio" name="correctAnswer" value="C">Correct answer</div>
                    </div>

                    <div>
                        <label>Option D</label>
                        <textarea id="at4" name="at4"></textarea>
                        <div class="correctAnswer">
                            <label>&nbsp;</label><input type="radio" name="correctAnswer" value="D">Correct answer</div>
                    </div>


                    <!-- answer char input  (1 CHAR !!! or TRUE/FALSE or empty input !!!) -->
                    <!--<div>-->
                        <!--<label>Input Char a right question answer</label>-->
                        <!--<input type="text" id="correctAnswer" name="correctAnswer" placeholder="D">-->
                    <!--</div>-->

                </div> 
                 <!-- end american question div --> 
                 
        <!--
