<body>
	<div id="container">

 	  <div id="right_side_company">
	<div id="formDiv">
	<h2>Creating new Question</h2>
	<form action="company_add_questions" method="post" id="addingForm" name="question_adding_form">
      <!--  metaCategory of question (getting from DB) -->
        <div id="longdiv">
            <label>Meta Category</label>
            
            <select id="mCatSel" name="metaCategory">
            <option value="none">Select Question Category</option>
            	<option value="American Test">American Test</option>
                <option value="Open Question">Open Question</option>					
            <%-- <%= Maintenance.AutoGeneratedInformationTextHTML()%> --%>
            </select>
            &nbsp;
            <input id="inputMetaCategoryField" type="text" name="metaCategory"  hidden="hidden" placeholder="Programming">
 		</div>
        
        <!-- Category of question (getting from DB) -->
        
        <div id="longdiv" >
            <label>Question Category</label>
            <select id="catSel" name="category1">
            <option value="none">Select Question Category</option>	
            <option value="Create company category">Create new category</option>   
            <%= AbstractAdminActions.AutoGeneratedInformationTextHTML()%>
            </select> &nbsp;
            <input id="inputCategoryField" type="text" name="category" hidden="hidden" placeholder="Java,HTML,...">
 		</div>
        <div id="compcategory">
	        <label>Company category </label>
	        <input type="text" name="compcategory" id="compcategory" />
       
		</div>
        <!-- Question level Of Difficulty () --> 
        <div>
            <label>Level of difficulty</label>
            <select name="levelOfDifficulty">
                <option value=1>level Of Difficulty</option>
                <option value=1>level  1</option>
                <option value=2>level  2</option>
                <option value=3>level  3</option>
                <option value=4>level  4</option>
                <option value=5>level  5</option>
            </select>
 		</div>
 		
        <!-- code in text for testing () --> 
        <div id = "questionDescription">
            <label>Question description <br />
            
            </label> 
            <textarea id="descriptionText" name="descriptionText" rows="14" cols="23"></textarea>
             <br />
            
 		</div>
         
        <div id = "codepattern">
            <label>Input Code by pattern <br />
             <p class="preTextPatternCode">
                Write the implementation!!!
                Your interface,
                or your method.
			</p>
            
            </label> 
            <textarea id="codeText" name="codeText" rows="14" cols="23"></textarea>
             <br />
       </div>
       
       <div id = "imageupload">
            <label>Upload Image</label>
            
            <input type="file" name="fileLocationLink"	placeholder="/MetaCategory/Category[if exist]/questionPictureName.jpg" />
            
 		</div>
       
        <div id = "americanquestion">
	        <!-- Button test code (AJAX) -->
	        <div>
	            <label>Test Code A</label>
	            <textarea name="at1"></textarea>
	 		</div>
	        <div>
	            <label>Test Code B</label>
	            <textarea name="at2"></textarea>
	 		</div>
	        <div>
	            <label>Test Code C</label>
	            <textarea name="at3"></textarea>
	 		</div>
	        <div>
	            <label>Test Code D</label>
	            <textarea name="at4"></textarea>
	 		</div>
	        
	        <!-- answer char input  (1 CHAR !!! or TRUE/FALSE or empty input !!!) --> 
	        <div>
	            <label>Input Char a right question answer</label>
	            <input type="text" name="correctAnswer" placeholder="D">
	 		</div>
	        
 		</div> <!-- end american question div --> 
        <!--
        TO DO upload image from 
        user computer, and convert to Base64 ???, for send to Service(BES),
        and save in standard folder (questions) on server in format .jpg
        -->

        <div>
            <label>&nbsp;</label>
            
            <input name="button_send" id="button_send"
			type="submit" value="Add To DataBase">
 		</div>
        <div>
            <label>		
				<script type="text/javascript">
                    document.write("${result}");
                </script>
			</label>
         </div>
     
