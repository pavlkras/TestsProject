        <div id="buttonSend">
                    <label>&nbsp;</label>

                    <input name="button_send" id="button_send"
                           type="button" value="Add To DataBase">
        </div>
        <div id="resultDB"></div>
        <input id="button_OK" type="button" value="OK" style="display: none">
     
    </form>
    
